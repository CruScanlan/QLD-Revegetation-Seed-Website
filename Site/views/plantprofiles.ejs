                        <a data-toggle="collapse" data-parent="#profiles" href="#<%= profiles[i].name.split(" ").join("-") %>-inside" aria-expanded="false" aria-controls="<%= profiles[i].name.split(" ").join("-") %>-inside">
                            <%= profiles[i].name %>
                        </a>
                    </h5>
                </div>
